{
  "extends": "@chatie/tsconfig",
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "resolveJsonModule": false,
    "target": "es2019",
    "module": "es2015"
  },
  "exclude": [
    "node_modules/",
    "dist/",
    "tests/fixtures/",
  ],
  "include": [
    "bin/*.ts",
    "examples/**/*.ts",
    "scripts/**/*.ts",
    "gas/**/*.ts",
    "tests/**/*.spec.ts",
  ],
}
